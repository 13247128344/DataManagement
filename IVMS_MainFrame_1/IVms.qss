/*公共样式*/
QPushButton[flat="true"]
{
	min-width: 79px;
	max-width: 79px;
	width: 79px;
	height: 23px;
	border-radius: 3px;
	border: 0;
	background-color: rgb(0, 169, 179);
	font-size: 12px;
	color: rgb(240, 240, 240);
}

QPushButton[flat="true"]:hover,
QPushButton[flat="true"]:pressed
{
	min-width: 79px;
	max-width: 79px;
	width: 79px;
	height: 23px;
	border-radius: 3px;
	border: 0;
	background-color: rgba(0, 169, 179, 120);
	font-size: 12px;
	color: rgb(240, 240, 240);
}

/*登录界面样式*/
#IVmsLoginDlg #lineEdit_user,
#IVmsLoginDlg #lineEdit_password,
#IVmsLoginDlg #lineEdit_language
{
    font-size:22px;
}

#IVmsLoginDlg #toolButton_close
