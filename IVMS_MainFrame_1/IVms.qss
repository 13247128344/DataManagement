}

#IVmsLoginDlg #toolButton_close:hover
{
    border-image:url(./Resources/close_nomal.png);
}

#IVmsLoginDlg #label_user
{
    border-image:url(./Resources/user.png);
}

#IVmsLoginDlg #label_password
{
    border-image:url(./Resources/password.png);
}

#IVmsLoginDlg #label_language
{
    border-image:url(./Resources/language.png);
}


