#toolbarItem QLabel
{
	background-color: transparent;
	color: rgb(240, 240, 240);
	font-size: 16px;
}

#toolbarItem #btn_close
{
    background-color: transparent;
    border-radius:0px;
    border-image:url(./Resources/close_nomal.png);
}

#toolbarItem #btn_close:hover,#toolbarItem #btn_close:pressed
{
    background-color: transparent;
    border-radius:0px;
    border-image:url(./Resources/close_active.png);
}

toolbarItem[toolbarItemActive="true"]
{
	border-top-left-radius: 5px;
	border-top-right-radius: 5px;
	margin-top: 2px;
	background-color: rgb(0, 169, 179);
}

toolbarItem[toolbarItemActive="false"]
{
	border-top-left-radius: 5px;
	border-top-right-radius: 5px;
	margin-top: 2px;
	background-color: rgb(49, 51, 55);
